# DEB_HOST_MULTIARCH ?= $(shell dpkg-architecture -qDEB_HOST_MULTIARCH)

%:
	dh $@

override_dh_missing:
	dh_missing
	mkdir -pv debian/calamares-settings-msm-linux/etc/calamares/modules
	mkdir -pv debian/calamares-settings-msm-linux/etc/calamares/branding
	cp -vr modules/* debian/calamares-settings-msm-linux/etc/calamares/modules/
	cp -vr branding/* debian/calamares-settings-msm-linux/etc/calamares/branding/
	cp -v settings.conf debian/calamares-settings-msm-linux/etc/calamares/
	chmod -R 755 debian/calamares-settings-msm-linux/etc/calamares

